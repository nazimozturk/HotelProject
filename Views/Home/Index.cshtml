@model LoginPicker
@{
	ViewData["Title"] = "Otel Transilvanya";
}

<link rel="stylesheet" href="/css/TestPage.css" />

<!--Hey! This is the original version
of Simple CSS Waves-->

<style>
	body{
		background-color: white;
	}
	footer{
		position:absolute;
		border:none;
	}
</style>
<div class="header">
	<!--Content before waves-->
	<div class="inner-header flex">
		<div class="container">
			<div class="row">
				<div class="col-md-7 col-md-push-5">
					<div class="booking-cta login-bg">
						<h1>REZERVASYONUNUZU YAPIN</h1>
						<p>
							Sizin ve sevdiklerinizin sağlığı, güvenliği ve konforu her zaman için en büyük önceliğimiz. İçinizin rahat etmesi için yeni sürece yüksek bir konsantrasyon, titizlik ve özenle hazırlandık. Her yıl olduğu gibi bu yıl da sizi güvenle ağırlamayı bekliyoruz.
						</p>
					</div>
				</div>
				<div class="col-md-4 col-md-pull-7">
					<div class="booking-form">
						<form method="post">
							<div class="row">
								<div class="col-sm-6">
									<div class="form-group">
										<label asp-for="startDate" class="form-label">Giriş Tarihi</label>
										<input asp-for="startDate" id="startDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
									</div>
								</div>
								<div class="col-sm-6">
									<div class="form-group">
										<label asp-for="endDate" class="form-label">Çıkış Tarihi</label>
										<input asp-for="endDate" id="endDate" class="form-control" value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" type="date" required>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-4">
									<div class="form-group">
										<label asp-for="roomSelect" class="form-label">Oda Tipi</label>
										<select asp-for="roomSelect" id="roomSelect" class="form-control">
											<option value="Standart Kara Manzaralı">Standart Kara Manzaralı</option>
											<option value="" id="">2</option>
											<option value="" id="">3</option>
											<option value="" id="">4</option>
										</select>
										<label class="select-arrow"></label>
									</div>
								</div>
								<div class="col-sm-4">
									<div class="form-group">
										<label asp-for="adultCount" class="form-label">Yetişkin</label>
										<select asp-for="adultCount" id="adultCount" class="form-control">
											<option>1</option>
											<option>2</option>
											<option>3</option>
										</select>
										<span class="select-arrow"></span>
									</div>
								</div>
								<div class="col-sm-4">
									<div class="form-group">
										<label asp-for="childCount" class="form-label">Çocuk</label>
										<select asp-for="childCount" id="childCount" class="form-control">
											<option>0</option>
											<option>1</option>
											<option>2</option>
										</select>
										<span class="select-arrow"></span>
									</div>
								</div>
							</div>
							<div class="form-btn">
								<button type="submit" class="submit-btn w-100">Odaları Listele</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!--Waves Container-->
	<div>
		<svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
			 viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
			<defs>
				<path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
			</defs>
			<g class="parallax">
				<use xlink:href="#gentle-wave" x="48" y="0" fill="rgba(255,255,255,0.7" />
				<use xlink:href="#gentle-wave" x="48" y="3" fill="rgba(255,255,255,0.5)" />
				<use xlink:href="#gentle-wave" x="48" y="5" fill="rgba(255,255,255,0.3)" />
				<use xlink:href="#gentle-wave" x="48" y="7" fill="#fff" />
			</g>
		</svg>
	</div>
	<!--Waves end-->
</div>
<!--Header ends-->
